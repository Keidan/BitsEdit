<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/activity_more"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingBottom="@dimen/activity_vertical_margin"
  android:paddingLeft="@dimen/activity_horizontal_margin"
  android:paddingRight="@dimen/activity_horizontal_margin"
  android:paddingTop="@dimen/activity_vertical_margin"
  tools:context="fr.ralala.bitsedit.MoreActivity">
  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
      android:id="@+id/ll1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_alignParentStart="true">

      <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilValue1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.65">

        <com.google.android.material.textfield.TextInputEditText
          android:id="@+id/tietValue1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:digits=" 0123456789"
          android:fontFamily="monospace"
          android:hint="@string/value1"
          android:inputType="number"
          android:maxLength="20"
          android:maxLines="1"
          android:minHeight="@dimen/touch_target_size"
          tools:ignore="VisualLintTextFieldSize" />
      </com.google.android.material.textfield.TextInputLayout>

      <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spInputType1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.35"
        android:contentDescription="@string/base"
        android:minHeight="@dimen/touch_target_size"
        tools:ignore="DuplicateSpeakableTextCheck" />
    </LinearLayout>
    <LinearLayout
      android:id="@+id/ll2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/ll1"
      android:layout_alignParentStart="true">

      <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilValue2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.65">

        <com.google.android.material.textfield.TextInputEditText
          android:id="@+id/tietValue2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:digits=" 0123456789"
          android:fontFamily="monospace"
          android:hint="@string/value2"
          android:inputType="number"
          android:maxLength="20"
          android:maxLines="1"
          android:minHeight="@dimen/touch_target_size"
          tools:ignore="VisualLintTextFieldSize" />
      </com.google.android.material.textfield.TextInputLayout>

      <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spInputType2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.35"
        android:contentDescription="@string/base"
        android:minHeight="@dimen/touch_target_size"/>
    </LinearLayout>

    <TextView
      android:id="@+id/tvOperation"
      android:text="@string/operation"
      android:layout_alignParentStart="true"
      android:layout_below="@id/ll2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="monospace"
      style="@style/AppTheme.InputLabel"/>

    <androidx.appcompat.widget.AppCompatSpinner
      android:id="@+id/spOperation"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/tvOperation"
      android:contentDescription="@string/operation"
      android:minHeight="@dimen/touch_target_size"
      tools:ignore="DuplicateSpeakableTextCheck" />

    <TextView
      android:id="@+id/tvResultLabel"
      android:text="@string/result"
      android:layout_alignParentStart="true"
      android:layout_below="@id/spOperation"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="monospace"
      style="@style/AppTheme.InputLabel"/>

    <TextView
      android:id="@+id/tvResult"
      android:text="@null"
      android:layout_alignParentStart="true"
      android:layout_below="@id/tvResultLabel"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="monospace"/>
  </RelativeLayout>
</ScrollView>
